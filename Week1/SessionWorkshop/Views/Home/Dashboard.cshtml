@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    
    <h1 style="flex: "class="display-4">Welcome @Context.Session.GetString("Name")</h1>
    <form action="Logout" method="post">
        <input type="submit" value="Logout"/>
    </form>
    <hr>
    <p>@Context.Session.GetInt32("Number")</p>
    <div >
        <div>
            <form action="/Submit" method="post">
                <input type="hidden" name="submission" value="1"/>
                <input type="submit" value="+1"/>
            </form>
            <form action="/Submit" method="post">
                <input type="hidden" name="submission"  value="-1"/>
                <input type="submit" value="-1"/>
            </form>
        </div>
        <div>
            <form action="/Submit" method="post">
                <input type="hidden"  name="submission" value="x2"/>
                <input type="submit" value="x2"/>
            </form>
            <form action="/Submit" method="post">
                <input type="hidden" name="submission"  value="randVal"/>
                <input type="submit" value="Random"/>
            </form>
        </div>
    </div>
</div>
